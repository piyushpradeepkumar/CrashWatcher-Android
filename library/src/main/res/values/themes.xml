<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CrashWatcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSecondary">@color/white_500</item>
        <item name="colorOnSecondary">@color/black_200</item>
        <item name="colorControlHighlight">@color/white_100</item>
    </style>


    <style name="TabTitleTextStyle">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/tab_title_text</item>
        <item name="android:textColor">@color/selector_tab_text_color</item>
    </style>
</resources>